<div class="container">
  <h2 class="text-center pb-2 mt-4 mb-2 border-bottom">Editar Aluno</h2>

  <% if @aluno.errors.any? %>
    <div id="error_explanation">
      <h5>
        <%= pluralize(@turma.errors.count, "erro") %> impediram esta turma de ser salva:
      </h5>
      <ul>
        <% @turma.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: [@turma, @aluno] do |f| %>
    <div class="container">


      <div class="form-group">
        <div class="field">
          <%= f.label :nome, "Nome" %><br>
          <%= f.text_field :nome, autofocus: true, class: "form-control", id: "inputNome" %>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="form-group">
            <div class="field">
              <%= f.label :matricula, "Matricula" %><br>
              <%= f.text_field :matricula, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <div class="field">
              <%= f.label :email, "Email" %><br>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center">
        <%= f.submit 'Salvar Alterações', class: "btn btn-lg btn-outline-primary" %>
      </div>

    </div>
  <% end %>
</div>