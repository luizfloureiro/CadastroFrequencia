<h2 class="text-center pb-2 mt-4 mb-2 border-bottom">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :login, "MatrÃ­cula" %><br />
      <%= f.text_field :login, autofocus: true, autocomplete: "login", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, "Senha" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <%= f.check_box :remember_me, :class => "form-check-input" %>
      <%= f.label :remember_me, "Lembrar de mim", :class => "form-check-label" %>
    </div>
  <% end %>

  <div class="form-group">
    <div class="actions text-center">
      <%= f.submit "Log in", :class => "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
