<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :password, "Senha" %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      <small id="password-help" class="form-text text-muted">
        <% if @minimum_password_length %>
          Mínimo de <%= @minimum_password_length %> caracteres. <i>(Deixe em branco se você não deseja alterar.)</i>
        <% end %>
      </small>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :password_confirmation, "Confirme sua senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :current_password, "Senha atual" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
      <small class="form-text text-muted">Precisamos que você insira sua senha atual para confirmar a mudança.</small>
    </div>
  </div>

  <div class="form-group">
    <div class="actions text-center">
      <%= f.submit "Update", :class => "btn btn-lg btn-outline-primary" %>
    </div>
  </div>

<% end %>

<%= link_to "Back", :back %>
