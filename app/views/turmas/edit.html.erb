<div class="container">
  <h2 class="text-center pb-2 mt-4 mb-2 border-bottom">Editar Turma</h2>

  <% if @turma.errors.any? %>
    <div id="error_explanation">
      <h5>
        <%= pluralize(@turma.errors.count, "erro") %> impediram esta turma de ser salva:
      </h5>
      <ul>
        <% @turma.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @turma do |f| %>
    <div class="container">


      <div class="form-group">
        <div class="field">
          <%= f.label :nome, "Nome" %><br>
          <%= f.text_field :nome, autofocus: true, class: "form-control", id: "inputNome" %>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <div class="field">
              <%= f.label :inicio, "Horário Início" %><br>
              <%= f.text_field :inicio, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <div class="field">
              <%= f.label :fim, "Horário Fim" %><br>
              <%= f.text_field :fim, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <%= f.label :cargamin, "Carga Horária Mínima" %><br>
            <%= f.text_field :cargamin, class: "form-control" %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= f.label :cargamin, "Carga Horária Máxima" %><br>
            <%= f.text_field :cargamax, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <div class="form-group">
            <%= f.label :nome, "Capacidade" %><br>
            <%= f.text_field :capacidade, class: "form-control" %>
          </div>
        </div>
        <div class="col-6">
          <div class="form-group">
            <%= f.label :dias, "Dias da Semana" %><br>
            <%= f.select :dias, Turma::dias.keys.to_a %>
          </div>
        </div>
      </div>

      <div class="row">
        <%= f.label :user_id, "Professor" %><br>
        <%= f.select :user_id, prof_disponiveis(@turma) %>
      </div>

      <div class="text-center">
        <%= f.submit 'Salvar Turma', class: "btn btn-lg btn-outline-primary" %>
      </div>

    </div>
  <% end %>
</div>