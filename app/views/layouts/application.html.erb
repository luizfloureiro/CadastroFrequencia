<!DOCTYPE html>
<html>
  <head>
    <title>Frequencia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_user %>
        <nav class="navbar sticky-top navbar-dark bg-dark">
          <a class="navbar-brand" href="/">Abc</a>
          <span class="navbar-text">Olá, <%= current_user.nome %> | <%= current_user.cargo %></span>

          <div class="btn-group">
            <%= link_to 'Editar e-mail', '#', class: 'btn btn-outline-light border-0 rounded-0' %>
            <% if current_user.admin? %>
              <%= link_to 'Manejar Usuários', cadastros_path, class: 'btn btn-outline-light border-0 rounded-0' %>
            <% elsif current_user.secretaria? %>
              <%= link_to 'Manejar Professores', cadastros_path, class: 'btn btn-outline-light border-0 rounded-0' %>
              <%= link_to 'Manejar Turmas', turmas_path, class: 'btn btn-outline-light border-0 rounded-0' %>
            <% end %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light border-0 rounded-0' %>
          </div>
        </nav>
      <% end %>
      <%= flash_messages %>

      <%= yield %>
    </div>
  </body>
</html>
